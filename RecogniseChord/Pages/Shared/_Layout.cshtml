@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    var appName = "Тренувальник сольфеджіо";
}
<!doctype html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @appName</title>

    <!-- Bootstrap & site css (adjust paths if you don't use libman/npm) -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-dark navbar-colored">
            <div class="container">
                <a class="navbar-brand ms-lg-5" asp-page="/Index">@Localizer["Title"]</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                        aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Create">>@Localizer["Build"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Index">>@Localizer["Recognise"]</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-page="/Privacy">@Localizer["About"]</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="langMenu" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Мова
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="langMenu">
                                <li><a class="dropdown-item" href='@Url.Page("/SetLanguage", new { culture = "uk", returnUrl = Context.Request.Path + Context.Request.QueryString })'>UK</a></li>
                                <li><a class="dropdown-item" href='@Url.Page("/SetLanguage", new { culture = "en", returnUrl = Context.Request.Path + Context.Request.QueryString })'>EN</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid">
        <main role="main" class="main">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4">
        <div class="container">
            &copy; @DateTime.Now.Year - @appName
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>